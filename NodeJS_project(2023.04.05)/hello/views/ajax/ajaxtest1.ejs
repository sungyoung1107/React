<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <input type="text" name="x" id="x" />
    <div id="result"></div>
    <button type="button" id="btnCall" onclick="ajaxCall()">
      Ajax호출하기
    </button>
  </body>
</html>

<script>
  function ajaxCall() {
    // 서버와 백그라운드에서 통신을 하려고 한다.
    var xhttp = new XMLHttpRequest(); // 통신 담당 객체를 만든다.
    // 서버에서 응답이 있을 경우 호출될 함수를 작성해서 전달한다.
    xhttp.onload = function () {
      // xhttp 객체에 responseText 라는 속성이 있고,
      // 이 속성에 서버에서 전달된 값이 저장되어 있다.
      console.log(this.responseText);
      document.getElementById("result").innerHTML = this.responseText;
    };

    // 서버로 원하는 정보를 요청한다.
    // GET 방식으로 Action은 /ajax/result1
    xhttp.open("GET", "/ajax/result1");
    xhttp.send(); // 서버로 접속요청을 비동기로 보낸다.
  }
</script>
